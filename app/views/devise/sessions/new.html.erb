<h2>Sign in</h2>

<div class="row">
	<div class="col-lg-4">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

		  <div class="form-group"><%= f.label :email, class: "sr-only" %><br />
		  <%= f.email_field :email, class: "form-control", autofocus: true %></div>

		  <div class="form-group"><%= f.label :password, class: "sr-only" %><br />
		    <%= f.password_field :password, class: "form-control", autocomplete: "off" %></div>

		  <% if devise_mapping.rememberable? -%>
    		<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  			<% end -%>

		  <div><%= f.submit "Sign in", class: "btn btn-default" %></div>
		<% end %><hr>
		<%= render "devise/shared/links" %>
	</div>
</div>