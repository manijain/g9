<div class="row">
  <div class="col-md-6">
      <h3>Property details</h3>
  </div>

  <div class="col-md-6">
      <p><%= link_to "Back", properties_path, class: 'btn btn-default pull-right', :style => "margin-top:20px" %></p>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-6">
    <p>
      <% @property_attachments.each do |property_img| %>
        <%= link_to image_tag(property_img.avatar_url(:thumb).to_s, :alt => 'Profile'), property_img.avatar_url, :title => @property.title, :rel => "lightbox", :class => "cursor_zoom_in"  %>
      <% end %>
    </p>
  </div>

  <div class="col-md-6">
    <h3><%= @property.title %></h3><br />
    <p><strong>Location : </strong><%= @property.location %></p><br />
    <p><strong>Approx Prize : </strong><%= @property.approx_prize %></p><br />
    <p><strong>Status : </strong><%= @property.status %></p><br />
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h4><%= @property.description %></h4><br />
    <h4>Sale within <%= @property.approx_sale_duration %></h4><br />

    <%= link_to "Request quotes", contact_path, class: "pull-right btn btn-default btn-success" %>
  </div>
</div>